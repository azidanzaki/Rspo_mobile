<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:id="@+id/scroll_dashboard"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:fillViewport="true"
		android:background="#FAFAFA">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Top bar kosong -->
			<LinearLayout
				android:id="@+id/top_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:paddingVertical="11dp"
				android:paddingHorizontal="20dp"
				android:orientation="horizontal" />

			<!-- Kartu header -->
			<LinearLayout
				android:id="@+id/card_header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/tl20tr20bfafafa"
				android:orientation="vertical">

				<!-- Header info karyawan -->
				<LinearLayout
					android:id="@+id/header_employee"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/tl20tr20b147ea8"
					android:paddingVertical="16dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:layout_marginBottom="20dp"
					android:orientation="vertical"
					android:gravity="center_vertical">

					<!-- Info Karyawan -->
					<LinearLayout
						android:id="@+id/employee_info"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_marginTop="6dp"
						android:layout_marginBottom="16dp">

						<TextView
							android:id="@+id/tv_company_name"
							android:textColor="#FAFAFA"
							android:textSize="12sp"
							android:layout_marginBottom="8dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="PTPN V" />

						<TextView
							android:id="@+id/tv_employee_name"
							android:textColor="#FAFAFA"
							android:textSize="16sp"
							android:textStyle="bold"
							android:layout_marginBottom="6dp"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="Fulan WR" />

						<LinearLayout
							android:id="@+id/employee_detail"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">

							<TextView
								android:id="@+id/tv_employee_id"
								android:textColor="#FAFAFA"
								android:textSize="12sp"
								android:textStyle="bold"
								android:layout_marginEnd="10dp"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="123456789" />

							<TextView
								android:id="@+id/tv_separator"
								android:textColor="#FAFAFA"
								android:textSize="12sp"
								android:textStyle="bold"
								android:layout_marginEnd="12dp"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="|" />

							<TextView
								android:id="@+id/tv_employee_role"
								android:textColor="#FAFAFA"
								android:textSize="12sp"
								android:textStyle="bold"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="Karyawan" />
						</LinearLayout>
					</LinearLayout>

					<!-- Unit PKS & Kebun dibawah karyawan -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center"
						android:layout_marginTop="8dp">

						<!-- Unit PKS -->
						<LinearLayout
							android:id="@+id/layout_unit_pks"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical">

							<ImageView
								android:id="@+id/rmt590grd9g"
								android:layout_width="120dp"
								android:layout_height="120dp"
								android:scaleType="centerCrop"
								android:src="@drawable/img_pks" />

							<TextView
								android:id="@+id/tv_pks"
								android:textColor="#3A3A3A"
								android:textSize="12sp"
								android:textStyle="bold"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="PKS" />
						</LinearLayout>

						<!-- Unit Kebun -->
						<LinearLayout
							android:id="@+id/layout_unit_kebun"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical">

							<ImageView
								android:id="@+id/rsiyy31rmgb"
								android:layout_width="120dp"
								android:layout_height="120dp"
								android:scaleType="centerCrop"
								android:src="@drawable/img_kebun" />

							<TextView
								android:id="@+id/tv_kebun"
								android:textColor="#3A3A3A"
								android:textSize="12sp"
								android:textStyle="bold"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="Kebun" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>

				<!-- Bottom History -->
				<include
					android:id="@+id/historyHeader"
					layout="@layout/item_history_header"/>

				<!-- RecyclerView untuk history di dashboard -->
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/recyclerDashboardHistory"
					android:layout_width="match_parent"
					android:layout_height="448dp"
					android:nestedScrollingEnabled="false" />

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<!-- Bottom nav -->
	<include
		android:id="@+id/bottomNav"
		layout="@layout/botton_nav" />

</LinearLayout>
