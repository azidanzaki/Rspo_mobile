<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <!-- Scroll agar bisa diakses di layar kecil -->
    <ScrollView
        android:id="@+id/scrollViewLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card Form -->
            <LinearLayout
                android:id="@+id/layoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cr25beaeaea"
                android:paddingVertical="32dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="100dp"
                android:elevation="6dp">

                <!-- Judul -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#003A55"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter your login details below"
                    android:textSize="14sp"
                    android:textColor="#550001"
                    android:layout_marginBottom="24dp"/>

                <!-- Input Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#378E76"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/br8bl8bffffff"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp"/>

                <!-- Input Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#378E76"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/br8bl8bffffff"
                    android:paddingHorizontal="12dp"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"/>

                <!-- Checkbox Privacy Policy -->
                <CheckBox
                    android:id="@+id/checkPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree with privacy and policy"
                    android:textColor="#550001"
                    android:layout_marginBottom="24dp"/>

                <!-- Button Login -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#30B2EB"
                    android:text="Log in"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:elevation="4dp"/>

                <!-- Sign Up Text -->
                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t have an account yet? Sign Up"
                    android:textColor="#550001"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
